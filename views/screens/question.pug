extends ../layouts/base.pug

block content
    h1.qutext 문의사항 게시판
    div.question
        div.question__button
            form(action="/questioncreate" method="GET")
                input(type="submit" value="게시하기") 
        ul.question__dataList
            li 번호
            li 제목
            li 작성자
            li 작성일
        each data in boardList    
            ul.question__list
                li 1
                li 
                    form(action="/questiondetail" method="GET")
                        input(type="hidden" name="id" value=data._id)
                        input(type="submit" value=data.title) 
                li #{data.author}
                li #{data.created}
    footer.footer
        .footer__col1
            a(href="/termsofuse")
                .footer__col1__text 이용약관
            .footer__col1__text1 만든이: 익명 
            .footer__col1__text2 만든이 전화: 0101-1010
            .footer__col1__text3 만든이 메일: ##@gmail.com 